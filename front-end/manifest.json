{
  "manifest_version": 3,
  "name": "GuardSurfing - Phishing Checker",
  "version": "1.0",
  "description": "Check current tab URL risk (phishing) via local backend.",
  "permissions": [
    "activeTab",
    "storage",
    "webNavigation",
  "tabs",
  "scripting",
  "notifications"
  ],
  "host_permissions": [
  "http://127.0.0.1:5000/*",
  "http://localhost:5000/*",
  "http://*/*",
  "https://*/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://* http://127.0.0.1:5000 http://localhost:5000"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
  "matches": ["<all_urls>"],
  "js": ["page_scanner.js"],
  "run_at": "document_idle",
  "all_frames": true,
  "match_about_blank": true
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "icons": {
    "48": "logo.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "logo.png",
      "48": "logo.png",
      "128": "logo.png"
    }
  }
}
  